<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.omikronsoft.notepad.NotePadActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_layout"
        android:orientation="vertical"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp">

                <LinearLayout
                    android:id="@+id/toggle_back_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/toggle_radio_back"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <ToggleButton
                        android:id="@+id/toggle_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ToggleButton"
                        android:textOff="Notes"
                        android:textOn="Notes" />

                    <ToggleButton
                        android:id="@+id/toggle_todo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ToggleButton"
                        android:textOff="To Do"
                        android:textOn="To Do" />

                    <ToggleButton
                        android:id="@+id/toggle_records"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ToggleButton"
                        android:textOff="Record"
                        android:textOn="Record" />

                    <ToggleButton
                        android:id="@+id/toggle_draw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ToggleButton"
                        android:textOff="Draw"
                        android:textOn="Draw" />
                </LinearLayout>
            </FrameLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="6dp"
                android:paddingRight="6dp">

                <com.baoyz.swipemenulistview.SwipeMenuListView
                    android:id="@+id/items_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/list_back" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/progress_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center">

                    <TextView
                        android:id="@+id/txt_total_counter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/main_layout"
                        android:paddingLeft="2sp"
                        android:paddingRight="2sp"
                        android:paddingTop="2dp"
                        android:text="Total:"
                        android:textColor="@color/toggle_radio_back"
                        android:textSize="12sp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/floating_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:padding="16sp">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/btn_floating_add"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:clickable="true"
                        app:backgroundTint="@color/fab_color"
                        app:elevation="1dp"
                        app:fabSize="auto"
                        app:srcCompat="@drawable/ic_add" />
                </FrameLayout>

            </FrameLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="6dp">

            <LinearLayout
                android:id="@+id/bottom_radio_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/toggle_radio_back"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:paddingTop="4dp"
                        android:text="Display items according to importance:"
                        android:textAlignment="center"
                        android:textColor="@color/main_layout"
                        android:textSize="11sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0">

                    <RadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingBottom="4sp"
                        android:paddingLeft="4sp"
                        android:paddingRight="4sp"
                        android:paddingTop="4sp">

                        <RadioButton
                            android:id="@+id/radio_low"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Show All"
                            android:textSize="12sp" />

                        <RadioButton
                            android:id="@+id/radio_med"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Medium and High"
                            android:textSize="12sp" />

                        <RadioButton
                            android:id="@+id/radio_high"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:text="Only High"
                            android:textSize="12sp" />

                    </RadioGroup>
                </FrameLayout>

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/item_add_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/list_back"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/add_main_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_layout"
            android:orientation="vertical"
            android:padding="6dp"
            android:weightSum="1">

            <Space
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_weight="0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/list_back"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp"
                    android:paddingRight="12dp"
                    android:paddingTop="6dp">

                    <ImageView
                        android:id="@+id/image_add_layout"
                        android:layout_width="100sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="false"
                        android:cropToPadding="true"
                        android:padding="6dp"
                        app:srcCompat="@drawable/ic_note" />

                    <EditText
                        android:id="@+id/txt_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Title"
                        android:imeOptions="actionDone"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="24sp" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_quote"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="30sp"
                            android:gravity="bottom|center"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="18sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/txt_author"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingRight="50sp"
                            android:textAlignment="textEnd"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/txt_note_content"
                        android:layout_width="match_parent"
                        android:layout_height="200sp"
                        android:layout_weight="1"
                        android:background="@color/note_background_color"
                        android:ems="10"
                        android:gravity="top|left"
                        android:hint="Note"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:padding="12dp"
                        android:textSize="24sp"
                        android:visibility="invisible" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="top|bottom|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@color/list_back"
                    android:paddingTop="12dp"
                    android:text="Importance:"
                    android:textAlignment="center" />

                <RadioGroup
                    android:id="@+id/add_radio_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@color/list_back"
                    android:checkedButton="@+id/add_radio_low"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="6dp">

                    <RadioButton
                        android:id="@+id/add_radio_low"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Low" />

                    <RadioButton
                        android:id="@+id/add_radio_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Medium" />

                    <RadioButton
                        android:id="@+id/add_radio_high"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="High" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@color/list_back"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <Button
                        android:id="@+id/btn_item_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Add" />

                    <Button
                        android:id="@+id/btn_item_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cancel" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</FrameLayout>
